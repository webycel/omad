<div class="row chat">

	<div class="small-12 column">

		<h1>Search for a person</h1>

		<%= form_tag search_user_path, :method => 'GET', :id => 'users_search' do %>
			<p>
				Find a person to start a new conversation.
			</p>
			<div class="row collapse">
				<div class="small-10 columns">
					<%= text_field_tag :search, params[:search], :placeholder => "Search by username / email" %>
				</div>
				<div class="small-2 columns">
					<%= button_tag "", class: "button postfix fi-magnifying-glass" %>
				</div>
			</div>
		<% end %>

		<% if @users %>
			<ul class="list">
				<% @users.each do |user| %>
					<li class="row collapse result">
						<%= link_to chat_path(user.id), :method => "POST" do %>
							<div class="small-1 columns">
								<i class="fi-comment"></i>
							</div>
							<div class="small-11 columns">
								<%= user.username %>
							</div>
						<% end %>
					</li>
				<% end %>
			</ul>
		<% end %>

	</div>

</div>

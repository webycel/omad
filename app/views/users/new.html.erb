<div class="row login">
    <div class="form small-10 small-offset-1 column">

	    <h1>Sign up</h1>

      	<%= form_for @user do |f| %>
     	  	<%= f.label :name %> <%= f.text_field :name %>
	        <%= f.label :email %> <%= f.email_field :email %>
	        <%= f.label :password %> <%= f.password_field :password %>

	      	<%= f.submit 'Sign up', class: 'button' %>
      	<% end %>

    </div>
</div>
